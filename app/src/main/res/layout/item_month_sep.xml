<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">

        <TextView
            android:id="@+id/month_sep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_background"
            tools:text="AGOSTO"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/grass_texture"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp">

            <ImageView
                android:id="@+id/calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_event_note_24"/>

            <TextView
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_background"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="16"/>

            <TextView
                android:id="@+id/weekday_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_background"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="SÁB"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@mipmap/venados_escudo"/>

            <TextView
                android:id="@+id/home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/design_default_color_background"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Venados F.C."/>

        </LinearLayout>

        <TextView
            android:id="@+id/home_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/design_default_color_background"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            tools:text="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/design_default_color_background"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:text="@string/separation"/>

        <TextView
            android:id="@+id/away_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/design_default_color_background"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            tools:text="2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/away_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@mipmap/venados_escudo" />

            <TextView
                android:id="@+id/away_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/design_default_color_background"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Venados F.C." />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>